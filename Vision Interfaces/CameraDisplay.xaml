            <Slider x:Name="HueLowerSlider" Value="{Binding HueLower, Mode=TwoWay}" HorizontalAlignment="Stretch" Maximum="360" SmallChange="1"/>
                <Slider x:Name="HueUpperSlider" Value="{Binding HueUpper, Mode=TwoWay}" HorizontalAlignment="Stretch" Maximum="360" SmallChange="1"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBox HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Value, ElementName=HueLowerSlider}"/>
                <TextBox HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Value, ElementName=HueUpperSlider}"/>
            </StackPanel>-->
        </Grid>
    </Grid>
</UserControl>
