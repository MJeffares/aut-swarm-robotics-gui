<Window x:Class="SwarmRoboticsGUI.OverlayWindow"
        x:Name="Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwarmRoboticsGUI"
        xmlns:em="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
        mc:Ignorable="d"
        Title="Overlay" Height="740" Width="1280" MinHeight="740" MinWidth="800" 
        Closing="Overlay_Closing">
    <Window.Resources>
        <!--Solid Brushes-->
        <SolidColorBrush x:Key="ListSpacerBrush" Color="#FF202020"/>
        <SolidColorBrush x:Key="ListItemBrush" Color="#FF404040"/>
        <SolidColorBrush x:Key="ListRobotBrush" Color="#FF101010"/>
        <SolidColorBrush x:Key="ListGroupBrush" Color="#FF303030"/>
        <SolidColorBrush x:Key="WindowBrush" Color="#FF303030"/>
        <SolidColorBrush x:Key="AccentBrush" Color="SkyBlue"/>
        <!--Radial Gradient Brushes-->
        <RadialGradientBrush x:Key="RadialBrush" Center="0.4,0.4" GradientOrigin="0.4,0.4">
            <RadialGradientBrush.GradientStops>
                <GradientStop Color="#7FA0A0A0" Offset="0"/>
                <GradientStop Color="#7F646464" Offset="1"/>
            </RadialGradientBrush.GradientStops>
        </RadialGradientBrush>
        <RadialGradientBrush x:Key="RadialBrush2" Center="0.4,0.4" GradientOrigin="0.4,0.4">
            <RadialGradientBrush.GradientStops>
                <GradientStop Color="#FFB4B4B4" Offset="0"/>
                <GradientStop Color="#FF787878" Offset="1"/>
            </RadialGradientBrush.GradientStops>
        </RadialGradientBrush>
    </Window.Resources>

    <Grid Background="{StaticResource WindowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <local:RobotGroups Grid.Row="1" Grid.Column="2"/>
        <local:Display x:Name="Display1" Grid.Row="1" Grid.Column="1" Items="{Binding RobotList}"/>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Height="40" VerticalAlignment="Top" Background="{StaticResource AccentBrush}"/>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Height="20" VerticalAlignment="Bottom" Background="{StaticResource AccentBrush}"/>

